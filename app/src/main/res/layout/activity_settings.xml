<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_small">

        <LinearLayout
            android:id="@+id/as_interval_overlay"
            style="@style/SettingsTheme.ClickableOverlay"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_normal"
            android:paddingStart="@dimen/padding_normal">

            <TextView
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/as_interval_label" />

            <TextView
                android:id="@+id/as_interval_value_view"
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/as_interval_default_text" />

        </LinearLayout>


        <View
            style="@style/AppTheme.Separator.Horizontal"
            android:layout_marginBottom="@dimen/padding_small" />


        <TextView
            style="@style/SettingsTheme.TextView.Subhead.Colored"
            android:text="@string/as_new_assign_subhead" />

        <RelativeLayout
            android:id="@+id/as_new_review_overlay"
            style="@style/SettingsTheme.ClickableOverlay">

            <TextView
                android:id="@+id/as_new_review_primary_line"
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_notify_new_assign_title" />

            <TextView
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:layout_below="@id/as_new_review_primary_line"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_notify_new_assign_details" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/as_new_review_switch"
                style="@style/SettingsTheme.ListItem.Switch" />

        </RelativeLayout>

        <View
            android:id="@+id/as_new_review_separator"
            style="@style/AppTheme.Separator.Horizontal" />


        <LinearLayout
            android:id="@+id/as_new_review_sound_overlay"
            style="@style/SettingsTheme.ClickableOverlay"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:text="@string/as_notification_sound_new_assignment" />

            <TextView
                android:id="@+id/as_new_review_sound_name"
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:text="@string/select_notification_sound" />

        </LinearLayout>


        <View
            style="@style/AppTheme.Separator.Horizontal"
            android:layout_marginBottom="@dimen/padding_small" />


        <TextView
            style="@style/SettingsTheme.TextView.Subhead.Colored"
            android:text="@string/as_price_changes_subhead" />

        <RelativeLayout
            android:id="@+id/as_price_changes_overlay"
            style="@style/SettingsTheme.ClickableOverlay">

            <TextView
                android:id="@+id/as_price_changes_primary_line"
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_notify_price_changes_title" />

            <TextView
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:layout_below="@id/as_price_changes_primary_line"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_notify_price_changes_details" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/as_price_changes_switch"
                style="@style/SettingsTheme.ListItem.Switch" />

        </RelativeLayout>

        <View
            android:id="@+id/as_price_changes_separator"
            style="@style/AppTheme.Separator.Horizontal" />

        <LinearLayout
            android:id="@+id/as_price_changes_sound_overlay"
            style="@style/SettingsTheme.ClickableOverlay"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:text="@string/as_notification_sound_price_changes" />

            <TextView
                android:id="@+id/as_price_changes_sound_name"
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:text="@string/select_notification_sound" />

        </LinearLayout>


        <View
            style="@style/AppTheme.Separator.Horizontal"
            android:layout_marginBottom="@dimen/padding_small" />


        <TextView
            style="@style/SettingsTheme.TextView.Subhead.Colored"
            android:text="@string/as_incorrect_request_subhead" />

        <RelativeLayout
            android:id="@+id/as_incorrect_request_overlay"
            style="@style/SettingsTheme.ClickableOverlay">

            <TextView
                android:id="@+id/as_incorrect_request_primary_line"
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_notify_request_inconsistency_title" />

            <TextView
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:layout_below="@id/as_incorrect_request_primary_line"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_notify_request_inconsistency_details" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/as_incorrect_request_switch"
                style="@style/SettingsTheme.ListItem.Switch" />

        </RelativeLayout>

        <View
            android:id="@+id/as_incorrect_request_separator"
            style="@style/AppTheme.Separator.Horizontal" />

        <LinearLayout
            android:id="@+id/as_incorrect_request_sound_overlay"
            style="@style/SettingsTheme.ClickableOverlay"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:text="@string/as_notification_sound_request_inconsistency" />

            <TextView
                android:id="@+id/as_incorrect_request_sound_name"
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:text="@string/select_notification_sound" />

        </LinearLayout>

        <View
            style="@style/AppTheme.Separator.Horizontal"
            android:layout_marginBottom="@dimen/padding_small" />

        <TextView
            style="@style/SettingsTheme.TextView.Subhead.Colored"
            android:text="@string/as_auto_refresh_subhead" />

        <RelativeLayout
            android:id="@+id/as_auto_refresh_overlay"
            style="@style/SettingsTheme.ClickableOverlay">

            <TextView
                android:id="@+id/as_auto_refresh_primary_line"
                style="@style/SettingsTheme.ListItem.PrimaryLine"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_auto_refresh_title" />

            <TextView
                style="@style/SettingsTheme.ListItem.SecondaryLine"
                android:layout_below="@id/as_auto_refresh_primary_line"
                android:layout_marginEnd="@dimen/list_item_inset"
                android:text="@string/as_auto_refesh_details" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/as_auto_refresh_switch"
                style="@style/SettingsTheme.ListItem.Switch" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>