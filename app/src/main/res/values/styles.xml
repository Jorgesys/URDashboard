<resources>

    <!--=========================-->
    <!-- Base application theme. -->
    <!--=========================-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.Sheet">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.Slot">
        <item name="android:layout_width">@dimen/slot_size</item>
        <item name="android:layout_height">@dimen/slot_size</item>
        <item name="android:background">@drawable/slot_empty_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/dark_textColorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.TextView.Subhead" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/text_padding_normal</item>
        <item name="android:paddingRight">@dimen/text_padding_normal</item>
        <item name="android:paddingTop">@dimen/text_padding_normal</item>
        <item name="android:paddingBottom">@dimen/text_padding_normal</item>
    </style>

    <style name="AppTheme.TextView.Subhead.Colored">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView.SecondaryLineLabel" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_light_textColorQuaternary</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="AppTheme.Separator.Horizontal" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_light_theme</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.ListItem.PrimaryLine" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.ListItem.SecondaryLine" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.TextView.ProjectId" parent="AppTheme">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/project_id_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_textColorPrimary</item>
    </style>

    <style name="AppTheme.TextView.JsonDetails.Label" parent="AppTheme">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_light_textColorPrimary</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <!--=========================-->
    <!--     Settings theme.     -->
    <!--=========================-->

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SettingsTheme.TextView.Subhead.Colored" parent="AppTheme.TextView.Subhead.Colored">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="SettingsTheme.ClickableOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
    </style>

    <style name="SettingsTheme.ListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/text_padding_normal</item>
        <item name="android:paddingRight">@dimen/text_padding_normal</item>
    </style>

    <style name="SettingsTheme.ListItem.PrimaryLine">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SettingsTheme.ListItem.SecondaryLine">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="SettingsTheme.ListItem.Switch">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>
