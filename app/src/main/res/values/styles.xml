<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Sheet">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.Slot">
        <item name="android:layout_width">@dimen/slot_size</item>
        <item name="android:layout_height">@dimen/slot_size</item>
        <item name="android:background">@drawable/slot_empty_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
